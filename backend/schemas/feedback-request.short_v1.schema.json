{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://insighthub.example/schemas/feedback-request.short_v1.json",
  "title": "InsightHub Feedback Request (short_v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["survey_version", "ratings", "open_text"],
  "properties": {
    "survey_version": {
      "type": "string",
      "enum": ["short_v1"]
    },
    "ratings": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "overall_satisfaction",
        "speed_satisfaction",
        "recommend_likelihood"
      ],
      "properties": {
        "overall_satisfaction": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "speed_satisfaction": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "recommend_likelihood": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        }
      }
    },
    "open_text": {
      "type": "object",
      "additionalProperties": false,
      "required": ["improve_one_thing", "keep_doing_one_thing"],
      "properties": {
        "improve_one_thing": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        },
        "keep_doing_one_thing": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        }
      }
    },
    "topic": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 100
    },
    "metadata": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "properties": {
        "userAgent": { "type": "string", "maxLength": 512 },
        "locale": { "type": "string", "maxLength": 32 }
      }
    }
  }
}
